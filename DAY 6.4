*{
    padding:0;
    margin:0;
    box-sizing: border-box;
}
body{
    /* width:100%;
    height:100vh; */
    background-color: hsl(0,0%,94%);
    display:grid;
    place-items:center;
}
h1{
    text-align: center;
    padding:40px 40px;
}
p{
    margin:0 60px;  
    word-spacing:1px;
    column-count:3;
    /* column-rule-color:red; */
    column-rule:3px solid red;
    column-gap:50px;
    text-align:justify;
}
